# =============================================================================
# Local Password Vault — Frontend Environment Variables
# =============================================================================
# Copy to .env and fill in your values. These are bundled at build time.

# Admin Portal (Ctrl+Shift+A in Electron app)
VITE_ADMIN_PORTAL_ENABLED=true
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
# Or LPV-specific (if using separate Supabase for LPV):
# VITE_SUPABASE_URL_LPV=
# VITE_SUPABASE_ANON_KEY_LPV=

# License Server URL (backend API)
VITE_LICENSE_SERVER_URL=https://api.localpasswordvault.com

# Stripe Publishable Key (safe for frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# License Signature Verification — ECDSA P-256 PUBLIC KEY
# This is the PUBLIC key only — safe to embed in the client bundle.
# To regenerate: node backend/scripts/generate-lpv-keys.js
VITE_LICENSE_PUBLIC_KEY=04ac1cea2e73f496cf55330264e1b804713c57b7adbc953b4b1d9563f71bc580658510e3e221f3f0c1db1d1499b1f786fef85e5764d88b5551f47c1b0743913e3e

# App Mode
VITE_APP_MODE=production
VITE_APP_VERSION=1.2.0
